<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.person.PersonFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/system_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="系统版本" />
        <TextView
            android:layout_marginLeft="4dp"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/system_version_title" />
        <TextView
            android:id="@+id/system_version"
            android:layout_marginLeft="40dp"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/system_version" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/person_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="系统版本" />
        <TextView
            android:layout_marginLeft="4dp"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="登录密码" />
        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/button_corner_radius"
            android:text="重置"
            android:textColor="@color/white" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/old_password_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="4dp"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="旧密码" />
        <EditText
            android:layout_marginLeft="4dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="请输入密码"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/password_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="4dp"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="新密码" />
        <EditText
            android:id="@+id/new_password"
            android:layout_marginLeft="4dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="请输入密码"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/new_password_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="4dp"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="新密码" />
        <EditText
            android:id="@+id/new_password_again"
            android:layout_marginLeft="4dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="请输入密码"
            />

    </LinearLayout>
    <Button
        android:id="@+id/ok"
        android:visibility="gone"
        android:text="确定"
        android:background="@drawable/button_corner_radius"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Button>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/logout"
        android:text="退出登录"
        android:background="@drawable/button_corner_radius"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>