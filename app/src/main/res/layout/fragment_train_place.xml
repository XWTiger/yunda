<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/train_no_lin1"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/train_no_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="作业车辆:"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <Spinner
            android:id="@+id/train_no_sp"
            android:textSize="16sp"
            android:theme="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/train_no_lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@+id/train_no_lin1">

        <TextView
            android:id="@+id/train_Lo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="作业位置:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/train_place"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:theme="@style/TextAppearance.AppCompat.Large"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>




